%p 
	%strong Title:
	=@article.title
%p 
	%strong Text:
	=@article.text

%p Comments
%ul
	-@article.comments.each do |comment|
		%li #{comment.commenter} : #{comment.body}
%h3 Add a Comment
=form_for([@article, @article.comments.build]) do |f|
	%p
		= f.label :commenter
		%br
		= f.text_field :commenter
	%p
		= f.label :body
		%br
		= f.text_field :body
	%p
		=f.submit		
= link_to 'Edit', edit_article_path(@article)		
= link_to 'Back', articles_path