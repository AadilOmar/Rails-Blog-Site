.center
  .formHeader
    %p{class: "formHeaderText"} Login 
    /session_login_path routes to session#create
    = form_for :session, url: session_login_path do |f|
      .formItem
        %p
          = f.label :username
          %br/
          = f.text_field :username
        %p
          = f.label :password
          %br/
          = f.password_field :password
        .submit{class: "submitButton"} 
          = f.submit 

  = link_to 'back', root_path, class: 'btn btn-primary'        
