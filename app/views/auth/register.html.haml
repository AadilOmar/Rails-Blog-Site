.center
  .formHeader
    %p{class: "formHeaderText"} Register 
    = form_for :user, url: users_path do |f|
      .formItem
        %p
          = f.label :name
          %br/
          = f.text_field :name
        %p
          = f.label :username
          %br/
          = f.text_field :username
        %p
          = f.label :password
          %br/
          = f.password_field :password                  
        .submit{class: "submitButton"} 
          = f.submit 

  = link_to 'back', root_path, class: 'btn btn-primary'        
